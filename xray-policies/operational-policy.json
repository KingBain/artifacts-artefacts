{
  "name": "GC-Operational-Policy",
  "description": "Government of Canada operational and malware detection policy",
  "type": "operational_risk",
  "rules": [
    {
      "name": "Malware-Detection",
      "priority": 1,
      "criteria": {
        "op_risk_min_risk": "High",
        "op_risk_custom": {
          "use_and_condition": false,
          "malicious_package": true,
          "risk_score_range": {
            "min": 75,
            "max": 100
          }
        }
      },
      "actions": {
        "webhooks": [],
        "mails": ["devops.artifacts-artefacts.devops@ssc-spc.gc.ca"],
        "block_download": {
          "unscanned": true,
          "active": true
        },
        "block_release_bundle_distribution": true,
        "fail_build": true,
        "notify_watch_recipients": true,
        "notify_deployer": true,
        "create_ticket_enabled": true
      }
    },
    {
      "name": "Suspicious-Package",
      "priority": 2,
      "criteria": {
        "op_risk_min_risk": "Medium",
        "op_risk_custom": {
          "use_and_condition": true,
          "malicious_package": false,
          "risk_score_range": {
            "min": 50,
            "max": 74
          }
        }
      },
      "actions": {
        "webhooks": [],
        "mails": ["devops.artifacts-artefacts.devops@ssc-spc.gc.ca"],
        "block_download": {
          "unscanned": false,
          "active": false
        },
        "block_release_bundle_distribution": false,
        "fail_build": false,
        "notify_watch_recipients": true,
        "notify_deployer": true,
        "create_ticket_enabled": true
      }
    }
  ],
  "project_integrations": {
    "integration_type": "global"
  }
}